{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],

  "exclude": ["node_modules", "test", "dist"]
}
